<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mezun Bilgi Sistemi</title>
    <link href="~/css/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand text-white ml-5">
                Mezun Öğrenci Bilgi Sistemi
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Home" class="nav-link text-white font-weight-bold">
                            Anasayfa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="GraduateStatistics" asp-controller="Home" class="nav-link text-white">
                            Mezun İstatistikleri
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="GraduateSearch" asp-controller="Home" class="nav-link text-white">
                            Mezun Arama
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Login" asp-controller="Account" class="nav-link text-white">
                            Giriş Yap
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
<script src="~/js/jquery/jquery.min.js"></script>
<script src="~/css/twitter-bootstrap/js/bootstrap.min.js"></script>